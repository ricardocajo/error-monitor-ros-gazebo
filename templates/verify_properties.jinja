def verify_properties():
    global {% for prop in properties -%}
    pattern_var{{ loop.index }},{% endfor -%} sim_state
    # Properties verification
    {% for prop in properties %}
    {% if prop.is_head -%}
    {% if prop.property == 'always' -%}
    pattern_var{{ loop.index }} = always_property_{{ loop.index }}()
    {% elif prop.property == 'never' -%}
    pattern_var{{ loop.index }} = never_property_{{ loop.index }}()
    {% elif prop.property == 'eventually' -%}
    pattern_var{{ loop.index }} = eventually_property_{{ loop.index }}()
    {% elif prop.property == 'after' -%}
    pattern_var{{ loop.index }} = after_property_{{ loop.index }}()
    {% elif prop.property == 'until' -%}
    pattern_var{{ loop.index }} = until_property_{{ loop.index }}()
    {% endif -%}
    {% endif -%}
    {% endfor -%}